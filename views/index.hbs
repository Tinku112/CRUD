{{>header}}
<title>CRUD - Home</title>
{{>navbar}}

<div class="container-fluid my-3">
    <h5 class="bg-dark text-light text-center p-2">Employee Data</h5>
</div>

<table class="table table-striped table-hover align-middle table-bordered " id = "dataTables">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Email_id</th>
        <th>Phone</th>
        <th>Designation</th>
        <th>Salary</th>
        <th>City</th>
        <th>State</th>
        <th>Edit</th>
        <th>Delete</th>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{phone}}</td>
            <td>{{designation}}</td>
            <td>{{salary}}</td>
            <td>{{city}}</td>
            <td>{{state}}</td>
            <td><a class="btn btn-dark" href="/edit/{{_id}}"><i class="fa fa-edit"></i></a></td>
            <td><a class="btn btn-info" href="/delete/{{_id}}"><i class="fa fa-trash"></i></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{>footer}}